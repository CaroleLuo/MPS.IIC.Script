<Controls:MetroWindow x:Class="MPS.IIC.Script.txtFileFormat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:MPS.IIC.Script"
        Title="Script Format Example" TitleAlignment="Left" Height="500" Width="400" FontSize="15" BorderBrush="Black">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*" />
        </Grid.ColumnDefinitions>
        <TextBox x:Name="format_tb1"   FontSize="10" FontWeight="Bold" AcceptsReturn="True" IsReadOnly="True" Grid.ColumnSpan="2"/>
        <TextBlock x:Name="format_tb3" Grid.Row="1" Grid.ColumnSpan="2" FontSize="10" FontWeight="Bold" />
    </Grid>
</Controls:MetroWindow>

